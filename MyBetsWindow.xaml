<Window x:Class="Fogadas.MyBetsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="My Bets" Height="400" Width="600">
    <Grid>
        <ListView x:Name="BetsListView">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Bet Date" Width="120" DisplayMemberBinding="{Binding BetDate}"/>
                    <GridViewColumn Header="Amount" Width="80" DisplayMemberBinding="{Binding Amount}"/>
                    <GridViewColumn Header="Odds" Width="80" DisplayMemberBinding="{Binding Odds}"/>
                    <GridViewColumn Header="Status" Width="100" DisplayMemberBinding="{Binding Status}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
