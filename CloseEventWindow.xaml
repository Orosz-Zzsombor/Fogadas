<Window x:Class="FogadasMokuskodas.CloseEventWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FogadasMokuskodas"
        mc:Ignorable="d"
        Title="CloseEventWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Was the event successful?" FontSize="16" FontWeight="Bold" Margin="0,0,0,20" />
            <Button Name="btnSuccess" Content="Yes" Width="100" Margin="0,0,0,10" Click="btnSuccess_Click"/>
            <Button Name="btnFailure" Content="No" Width="100" Margin="0,0,0,10" Click="btnFailure_Click"/>
            <Button Name="btnCancel" Content="Cancel" Width="100" Click="btnCancel_Click"/>
        </StackPanel>

    </Grid>
</Window>
